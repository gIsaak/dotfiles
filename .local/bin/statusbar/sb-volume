#!/bin/bash

# Prints the current volume

case $BUTTON in
	1) setsid -f "$TERMINAL" -e pulsemixer ;;
	3) pamixer -t ;;
esac

[ $(pamixer --get-mute) = true ] && echo  && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
	icon=""
elif [ "$vol" -lt "20" ]; then
	icon=""
else
	icon=""
fi

echo "$icon $vol%"
